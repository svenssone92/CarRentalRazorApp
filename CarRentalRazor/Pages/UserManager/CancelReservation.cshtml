@page
@model CarRentalRazor.Pages.UserManager.CancelReservationModel

@{
    ViewData["Title"] = "CancelReservation";
}

<h3>Are you sure you want to cancel your reservation?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.Car)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.Car.Model)
        </dd>
        <dt class="col-sm-2">
            
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Car.PictureString" alt="Car Image" height="100">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.EndDate)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Reservation.Id" />
        <input type="submit" value="Cancel" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
