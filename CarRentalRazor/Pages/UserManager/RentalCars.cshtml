@page
@model CarRentalRazor.Pages.UserManager.RentalCarsModel

@{
    ViewData["Title"] = "RentalCars";
}

<h1>RentalCars</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Model
            </th>
            <th>
                Picture
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Car) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                <img src="@item.PictureString" alt="SiteLogo" height="100">
            </td>
            <td>
                <a asp-page="./Reservations" asp-route-id="@item.Id">Reserve</a>
            </td>
        </tr>
}
    </tbody>
</table>
