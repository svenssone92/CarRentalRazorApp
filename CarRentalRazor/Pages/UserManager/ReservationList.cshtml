@page
@model CarRentalRazor.Pages.UserManager.ReservationListModel

@{
    ViewData["Title"] = "ReservationList";
}

<h1>My Reservations</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Car
            </th>
            <th>
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Reservation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Car.Model)
            </td>
            <td>
                    <img src="@item.Car.PictureString" alt="Car Image" height="100">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                <a asp-page="./CancelReservation" asp-route-id="@item.Id">Cancel Reservation</a>
            </td>
        </tr>
}
    </tbody>
</table>
