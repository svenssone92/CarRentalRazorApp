@page
@model CarRentalRazor.Pages.UserManager.ReservationsModel

@{
    ViewData["Title"] = "Reservations";
}

<h1>Reservations</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.Id" class="form-control" asp-items="ViewBag.CarId" />
            <input type="hidden" asp-for="Car.Model" class="form-control" asp-items="ViewBag.CarId" />
            <input type="hidden" asp-for="Car.Reservations" class="form-control" asp-items="ViewBag.CarId" />
            <input type="hidden" asp-for="Car.PictureString" class="form-control" asp-items="ViewBag.CarId" />
            <div class="form-group">
                <label asp-for="Reservation.StartDate" class="control-label"></label>
                <input asp-for="Reservation.StartDate" class="form-control" />
                <span asp-validation-for="Reservation.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.EndDate" class="control-label"></label>
                <input asp-for="Reservation.EndDate" class="form-control" />
                <span asp-validation-for="Reservation.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Model)
        </dd>
        <dt class="col-sm-2">

        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.Car.PictureString)" alt="Car Image" height="100">
        </dd>
    </dl>
</div>

<div>
    <a asp-page="/UserManager/RentalCars">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
